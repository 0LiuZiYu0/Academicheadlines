<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.academicheadlines.LoginActivity">
    <ImageView
        android:id="@+id/denglutupian"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/denglutu" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/Username"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/denglutupian"
        android:layout_centerHorizontal="true"
        android:text="手机号/邮箱/用户名"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/Key"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/Username"
        android:layout_centerHorizontal="true"
        android:text="密码"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/denglu"
        android:layout_marginTop="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Key"
        android:text="登    录"
        android:background="#999c"/>

    <RelativeLayout
        android:id="@+id/lala"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/denglu"
        android:layout_alignParentStart="true">
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/register"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="注册"
            />

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/forget"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text="忘记密码"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="26dp"
        android:layout_below="@id/lala"
        android:layout_alignParentStart="true"
        android:weightSum="3">
        <ImageButton
            android:id="@+id/weibodenglu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/weibo"
            android:background="#00000000"/>
        <ImageButton
            android:id="@+id/qqdenglu"
            android:layout_toRightOf="@id/weibodenglu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/qq"
            android:background="#00000000"/>
        <ImageButton
            android:id="@+id/weixindenglu"
            android:layout_toRightOf="@id/qqdenglu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/weixin"
            android:background="#00000000"/>
    </LinearLayout>

</RelativeLayout>
