<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_live_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.academicheadlines.LiveAllActivity">
    <TextView
        android:id="@+id/LiveAll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="全部直播"
        android:textColor="#000000"
        android:textSize="15sp" />



    <RelativeLayout
        android:id="@+id/Livetable1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/LiveAll"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:src="@drawable/defult"
            android:id="@+id/LiveimageView1" />

        <TextView
            android:layout_toRightOf="@id/LiveimageView1"
            android:id="@+id/Livetext1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的大数据观"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true" />
        <TextView
            android:layout_toRightOf="@id/LiveimageView1"
            android:paddingLeft="10dp"
            android:layout_below="@id/Livetext1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Livetext1_2"
            android:text="啦啦啦先生.653人
19:00 今天" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/Livetable2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/Livetable1"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:src="@drawable/defult"
                android:id="@+id/LiveimageView2" />

            <TextView
                android:layout_toRightOf="@id/LiveimageView2"
                android:id="@+id/Livetext2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的大数据观"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true" />
            <TextView
                android:layout_toRightOf="@id/LiveimageView2"
                android:paddingLeft="10dp"
                android:layout_below="@id/Livetext2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Livetext2_2"
                android:text="啦啦啦先生.653人
19:00 今天" />
</RelativeLayout>


            <RelativeLayout
                android:id="@+id/Livetable3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/Livetable2"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:src="@drawable/defult"
                    android:id="@+id/imageView" />

                <TextView
                    android:layout_toRightOf="@id/imageView"
                    android:id="@+id/Livetext3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的大数据观"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:layout_toRightOf="@id/imageView"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/Livetext3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Livetext3_2"
                    android:text="啦啦啦先生.653人
19:00 今天" />

    </RelativeLayout>
</RelativeLayout>
