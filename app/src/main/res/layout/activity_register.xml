<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.academicheadlines.registerActivity">

    <TextView
        android:id="@+id/zhuce"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="注册" />

    <TextView
        android:id="@+id/PhoneER"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/zhuce"
        android:gravity=""
        android:text="请输入手机号/电子邮箱"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/yanzhengma"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/PhoneER"
        android:gravity=""
        android:text="请输入验证码"
        android:textSize="15sp" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/yanzhengma"
        android:text="注册即视为已阅读并同意《用户服务协议》"
        android:id="@+id/fuwuxieyi"/>
    <Button
        android:id="@+id/zhuce_b"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/fuwuxieyi"
        android:text="注   册"
        android:textSize="20sp"
        />
</RelativeLayout>
