<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <Button
            android:id="@+id/button1"
            android:layout_marginLeft="2pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAAI"/>
        <Button
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据挖掘"/>
        <Button
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人工智能"/>
        <Button
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_marginRight="2pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPAMI"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/paper_title"
            android:layout_margin="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="ICA with Reconstruction Cost for Efficient Overcomplete Feature Learning"/>
        <TextView
            android:id="@+id/paper_author"
            android:layout_margin="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="作者  QV Le，A Karpenko，J Ngiam，AY Ng"/>
        <TextView
            android:id="@+id/paper_abstract"
            android:layout_margin="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Independent Components Analysis (ICA) and its variants have been successfully used for unsupervised feature learning. However, standard ICA requires an or-thonoramlity constraint to be enforced, which makes it difficult to learn overcom-plete features. In addition, ICA is sensitive to whitening. These properties make it challenging to scale ICA to high dimensional data. In this paper, we propose a robust soft reconstruction cost for ICA that allows us to learn highly overcomplete sparse features even on unwhitened data. "/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <ImageView
            android:src="@drawable/browse"
            android:layout_gravity="center"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:layout_marginLeft="5pt"/>
        <TextView
            android:id="@+id/paper_browse"
            android:layout_marginRight="10pt"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="123"/>
        <ImageView
            android:src="@drawable/comment"
            android:layout_gravity="center"
            android:layout_width="10pt"
            android:layout_height="10pt" />
        <TextView
            android:id="@+id/paper_comment"
            android:layout_marginRight="10pt"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="321"/>
        <TextView
            android:id="@+id/paper_download"
            android:layout_marginRight="10pt"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/paper_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2894FF"
            android:text="关注"
            android:layout_marginRight="5pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <Button
            android:layout_weight="1"
            android:id="@+id/paper_answe_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginLeft="5pt"
            android:text="邀请回答"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/paper_answer_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginRight="5pt"
            android:text="写回答"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginTop="5pt">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/paper_answer_user_avatar"
           android:layout_width="15pt"
           android:layout_height="15pt"
           android:layout_marginLeft="5pt"
           android:layout_marginTop="2pt"
           android:src="@drawable/avatar"/>
       <TextView
           android:id="@+id/paper_answer_user_name"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginLeft="5pt"
           android:gravity="center"
           android:text="USER_ID"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/paper_answer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:textColor="#000"
            android:text="Independent Components Analysis (ICA) and its variants have been successfully used for unsupervised feature learning. However, standard ICA requires an or-thonoramlity constraint to be enforced, which makes it difficult to learn overcom-plete features. In addition, ICA is sensitive to whitening. These properties make it challenging to scale ICA to high dimensional data. In this paper, we propose a robust soft reconstruction cost for ICA that allows us to learn highly overcomplete sparse features even on unwhitened data."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt">
        <TextView
            android:id="@+id/paper_answer_agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5pt"
            android:textColor="#BEBEBE"
            android:text="18 赞同 ."
            />
        <TextView
            android:id="@+id/paper_answer_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#BEBEBE"
            android:text="1 评论 ."
            />
        <TextView
            android:id="@+id/paper_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#BEBEBE"
            android:text="1 分钟前"
            />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginTop="5pt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="15pt"
                android:layout_height="15pt"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="2pt"
                android:src="@drawable/avatar"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:gravity="center"
                android:text="USER_ID"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5pt"
                android:textColor="#000"
                android:text="Independent Components Analysis (ICA) and its variants have been successfully used for unsupervised feature learning. However, standard ICA requires an or-thonoramlity constraint to be enforced, which makes it difficult to learn overcom-plete features. In addition, ICA is sensitive to whitening. These properties make it challenging to scale ICA to high dimensional data. In this paper, we propose a robust soft reconstruction cost for ICA that allows us to learn highly overcomplete sparse features even on unwhitened data."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5pt">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:textColor="#BEBEBE"
                android:text="18 赞同 ."
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#BEBEBE"
                android:text="1 评论 ."
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#BEBEBE"
                android:text="1 分钟前"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>